<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:background="#64000000">

    <!-- Option -->
    <LinearLayout
        android:id="@+id/secondLine"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/user_friend_refuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/paddingBig"
            android:paddingBottom="@dimen/paddingBig"
            android:paddingLeft="@dimen/paddingBig"
            android:paddingRight="@dimen/paddingSmall">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/dialog_change_friend_remove"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/marginSmall"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/paddingMedium"
        android:paddingBottom="@dimen/paddingMedium"
        android:paddingLeft="@dimen/paddingBig"
        android:paddingRight="@dimen/paddingSmall"
        android:background="@color/white"
        android:id="@+id/mainLine"
        android:baselineAligned="false"
        android:layout_above="@id/secondLine">

        <info.debuck.tonight.EventClass.UserAvatar
            android:id="@+id/user_list_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_account_circle"/>

        <TextView
            android:id="@+id/user_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Firstname Lastname"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/marginSmall"/>

        <TextView
            android:id="@+id/user_pending_friend_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friend_request"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/paddingMedium"
            android:gravity="end"
            android:textStyle="italic"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>